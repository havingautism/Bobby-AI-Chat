{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AI Chat",
  "version": "0.1.1",
  "identifier": "com.bobby.ai-chat",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "AI Chat",
        "width": 1800,
        "height": 1000,
        "minWidth": 1800,
        "minHeight": 1000,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {

    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "ProductivityApp",
    "shortDescription": "A modern AI chat application supporting multiple models",
    "longDescription": "A feature-rich AI chat application built with React and Tauri, supporting multiple AI models including DeepSeek, OpenAI, and more. Features include conversation history, settings management, knowledge base with vector search, and a modern glassmorphism UI.",
    "publisher": "Bobby Project",
    "resources": []
  }
}